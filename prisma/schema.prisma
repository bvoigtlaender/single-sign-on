generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AccessRight {
  id          String               @id
  title       String
  description String
  users       AccessRightsOnUser[]
}

model AccessRightsOnUser {
  accessRight   AccessRight @relation(fields: [accessRightId], references: [id])
  accessRightId String
  user          User        @relation(fields: [userId], references: [id])
  userId        Int

  @@id([accessRightId, userId])
}

model User {
  id           Int                  @id @default(autoincrement())
  email        String               @unique
  password     String
  name         String
  accessRights AccessRightsOnUser[]
}
